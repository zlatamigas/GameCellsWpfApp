<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="HeaderTextBlockStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="32"/>
        <Setter Property="FontWeight" Value="DemiBold"/>
        <Setter Property="Margin" Value="0 12 0 30"/>
        <Setter Property="Foreground" Value="{StaticResource HeaderTextBlockBrush}"/>
    </Style>
    
    <Style x:Key="FadedTextBlockStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="DemiBold"/>
        <Setter Property="Margin" Value="0 12 0 30"/>
        <Setter Property="Foreground" Value="{StaticResource FadedTextBlockBrush}"/>
    </Style>
    
</ResourceDictionary>